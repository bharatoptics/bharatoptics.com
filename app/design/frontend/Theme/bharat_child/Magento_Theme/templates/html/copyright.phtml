			var position = $(this).attr('data-position');
			$('.tab__content[data-slider="'+position+'"]').addClass('is--activated');			
		});
		$(".minicart__close").click(function(){ 
			$(".sk-minicart__overlay").css('opacity',0); 
			$(".sk-minicart__overlay").css('display','none');
			
			$(".sk-minicart__overlay").css('visibility','hidden');
			$(".sk-minicart").removeClass('is--expanded');
			$(".sk-minicart").css('opacity',0);
			$(".sk-minicart").css('visibility','hidden');
			
		});
		$(".sk-header__cart").mouseout(function() {
			setTimeout(function() { 
			$(".sk-minicart__overlay").css('opacity',0); 
			$(".sk-minicart__overlay").css('display','none');
			
			$(".sk-minicart__overlay").css('visibility','hidden');
			$(".sk-minicart").removeClass('is--expanded');
			$(".sk-minicart").css('opacity',0);
			$(".sk-minicart").css('visibility','hidden');
			}, 0.35);
		  }).mouseover(function() {
			setTimeout(function() { 
			$(".sk-minicart__overlay").css('display','block');
			$(".sk-minicart__overlay").css('opacity',1);
			$(".sk-minicart__overlay").css('visibility','inherit');
			$(".sk-minicart").addClass('is--expanded');
			$(".sk-minicart").css('opacity',1);
			$(".sk-minicart").css('visibility','inherit');
			}, 0.35);
		});
		
		$(window).scroll(function() {    
			var scroll = $(window).scrollTop();
			if (scroll >= 50) {
			/*$(window).scroll(function() {
			if ($(this).scrollTop() >= 20) {*/ 
				$(".sk-header--site").addClass("is--sticky");
				$(".sk-header--site").addClass("is--up");
				$(".sk-header--site").removeClass("is--pinned");
				$(".sk-header--site").removeClass("is--top");
				 
			 } else {
				$(".sk-header--site").removeClass("is--sticky");
				$(".sk-header--site").removeClass("is--up");
				$(".sk-header--site").addClass("is--pinned");
				$(".sk-header--site").addClass("is--top");
			 } 
		 });
	  });

});

</script>
